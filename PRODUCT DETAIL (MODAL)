function openProductDetail(productId) {
    const product = PRODUCTS.find(p => p.id === productId);
    const modal = document.getElementById('product-detail-modal');
    const content = document.getElementById('modal-content');

    content.innerHTML = `
        <div class="img-container">
            <div class="img-placeholder" style="width:200px; height:200px;"></div>
        </div>
        <div class="detail-info">
            <button onclick="document.getElementById('product-detail-modal').close()" class="close-modal">Back to list</button>
            <h2>${product.name}</h2>
            <p class="price" style="font-size: 1.5rem; margin: 12px 0;">$${product.price.toFixed(2)}</p>
            <p class="desc">${product.desc}</p>
            
            <div class="variant-selector" style="margin: 24px 0;">
                <label>Select Size</label>
                <div style="display:flex; gap:8px; margin-top:8px;">
                    <button class="btn-ghost">S</button>
                    <button class="btn-ghost">M</button>
                    <button class="btn-ghost">L</button>
                </div>
            </div>

            <button class="btn-primary full-width add-to-cart-btn" onclick="addToCart(${product.id})">Add to Bag</button>

            <div class="expandable-info" style="margin-top: 32px;">
                <details>
                    <summary>Materials & Care</summary>
                    <p>Machine wash cold. Tumble dry low. 100% sustainable materials.</p>
                </details>
                <details>
                    <summary>Shipping & Returns</summary>
                    <p>Free standard shipping on orders over $150. 30-day return policy.</p>
                </details>
            </div>
        </div>
    `;

    modal.showModal();
}